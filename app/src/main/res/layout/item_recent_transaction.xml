<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/five_5dp">

        <TextView
            android:id="@+id/tvTransactionTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/tvCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/ten_10dp"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivTransactionImage"
            android:layout_width="@dimen/twenty_20dp"
            android:layout_height="@dimen/twenty_20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvTransactionTimestamp"
            android:layout_marginLeft="@dimen/twenty_20dp"
            android:layout_marginStart="@dimen/twenty_20dp"
            android:layout_marginTop="@dimen/five_5dp"
            android:src="@drawable/up_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTransactionTimestamp"
            android:layout_toEndOf="@id/ivTransactionImage"
            android:layout_toLeftOf="@id/tvCredits"
            android:layout_toRightOf="@id/ivTransactionImage"
            android:layout_toStartOf="@id/tvCredits"
            android:orientation="vertical"
            android:padding="@dimen/five_5dp">

            <TextView
                android:id="@+id/tvTransactionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
