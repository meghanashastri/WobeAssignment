<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.admin.wobeassignment.customViews.DottedProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/margin_65dp"
        android:paddingRight="@dimen/margin_65dp"
        app:activeDot="@color/white"
        app:dotSize="@dimen/margin_13dp"
        app:inactiveDot="@color/colorPrimary"
        app:noOfDots="2" />

</LinearLayout>